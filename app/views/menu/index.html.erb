<div id="gallary">
  <table>
    <% if @images.size == 0 -%>
      <% 3.times do -%>
    <tr><% 5.times { %><td class="noimage">+</td><% } %></tr>
      <% end -%>
    <% else -%>
      <% count = 3 -%>
      <% @images.each_slice(5) do |imgs| -%>
    <tr>
        <% 5.times do |i| -%>
        <% @img = imgs[i] -%>
          <% if @img.nil? -%>
      <td class="noimage">+</td>
          <% else -%>
      <td><%= lightbox_image_tag(url_for_image_column(:img, :path, :thumb),
                                 url_for_file_column(:img, :path),
                                 {:class=>"images"},
                                 :title => @img.name,
                                 :rel => 'lightbox[photo]') %></td>
           <% end -%>
        <% end -%>
    </tr>
      <% count -= 1 -%>
      <% end -%>
      <% count.times do -%>
        <tr><% 5.times { %><td class="noimage">+</td><% } %></tr>
      <% end -%>
    <% end -%>
  </table>
  <div id="pagenate">
    <%= will_paginate @images %>
  </div>
</div>
